{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger mt-4">
            {{ error.messageKey }}
        </div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="mt-4">
        <div class="form-group">
            <label for="username">{{ 'form.login.username' | trans }}</label>
            <input type="text" id="username" name="_username" class="form-control" placeholder="{{ 'form.login.username' | trans }}" autofocus="" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="password">{{ 'form.login.password' | trans }}</label>
            <input type="password" id="_password" name="_password" class="form-control mb-2" placeholder="{{ 'form.login.password' | trans }}">
        </div>
        <button type="submit" class="btn btn-primary">{{ 'form.login.sign_in' | trans  }}</button>
    </form>

{% endblock %}