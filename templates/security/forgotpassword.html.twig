{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">{{ message | trans }}</div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger mt-4">{{ message | trans }}</div>
    {% endfor %}

    <h1 class="mt-3">{{ 'page.user.forgotpassword.title' | trans }}</h1>

    {{ include('form/_user.html.twig', {form: form, button: 'page.user.create.btn' | trans}) }}

{% endblock %}