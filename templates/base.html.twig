<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/png" href="{{ asset('/build/images/favicon.png') }}" />
        <title>{% block title %}Les chatons !{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('cats_list') }}">{{ 'header.navbar.title' | trans }}</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <ul class="navbar-nav right-users">
                        <li class="nav-item">
                            <i class="fa fa-users" aria-hidden="true"></i><a href="{{ path('users_list') }}" class="nav-link">{{ 'header.navbar.users' | trans }}</a>
                        </li>
                    </ul>
                {% endif %}
                {% if app.user %}
                    <ul class="navbar-nav ml-auto right-users">
                        <li class="nav-item">
                            <i class="fa fa-user-circle-o" aria-hidden="true"></i><a href="{{ path('users_profile') }}" class="nav-link">{{ app.user.username }}</a>
                        </li>
                        <li class="nav-item">
                            <i class="fa fa-sign-out" aria-hidden="true"></i><a href="{{ path('logout') }}" class="nav-link">Se d√©connecter</a>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </nav>
    </header>

    <div class="container">
        {% block body %}{% endblock %}
    </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
